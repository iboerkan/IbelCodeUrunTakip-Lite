@page "/Hakkimizda"
@attribute [Authorize(Roles = "Admin")]
@using DevExpress.Blazor
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@* İkonların görünmesi için Index.html veya App.razor'da Bootstrap Icons linki olmalıdır *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="landing-page">
    @* --- Hero Section --- *@
    <section class="hero-section text-center py-5 bg-light border-bottom shadow-sm">
        <div class="container">
            <h1 class="display-4 fw-bold text-primary mb-3">Piyasanın Nabzını Anlık Tutun</h1>
            <p class="lead text-secondary mb-4">
                Binlerce Ürün, Yüzlerce Mağaza, Tek Bir Takip Paneli.
            </p>
            <div class="d-flex justify-content-center gap-3">
                <DxButton Text="Hemen Ürünlerini İzlemeye Başla"
                          RenderStyle="ButtonRenderStyle.Primary"
                          Size="ButtonSize.Large"
                          NavigateUrl="UrunTakip"
                          IconCssClass="bi bi-search" 
                          @rendermode="InteractiveServer" />
               
            </div>
        </div>
    </section>

    @* --- Özellikler Section --- *@
    <section id="features" class="py-5 container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Neden Bu Sistemi Kullanmalısınız?</h2>
            <div class="mx-auto bg-primary mt-2" style="height: 3px; width: 60px;"></div>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center p-4 feature-card">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-funnel text-primary fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Hassas Ayrıştırma</h5>
                    <p class="text-muted small">Negatif filtreleme ile aradığınız model dışındaki tüm "gürültü" sonuçları otomatik elenir.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center p-4 feature-card">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-graph-up-arrow text-success fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Anlık Alarmlar</h5>
                    <p class="text-muted small">1000+ üründeki fiyat değişimlerini anlık yakalayın, fırsatları herkesten önce siz öğrenin.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center p-4 feature-card">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shop text-info fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Satıcı Analizi</h5>
                    <p class="text-muted small">Tüm alt satıcıların tekliflerini, kargo detaylarını ve mağaza puanlarını tek ekranda görün.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center p-4 feature-card">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-lightning-charge text-warning fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Asenkron Güç</h5>
                    <p class="text-muted small">Blazor hızıyla yüzlerce ürünü arka planda tararken işlerinize kesintisiz devam edin.</p>
                </div>
            </div>
        </div>
    </section>


    @* --- Karşılaştırma Section --- *@
    <section class="bg-dark text-white py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-white">Piyasa Takibinde Yeni Standart</h2>
            </div>
            <div class="table-responsive shadow-lg">
                <table class="table table-dark table-hover mb-0 border-secondary">
                    <thead class="table-primary">
                        <tr>
                            <th class="p-3">Özellik</th>
                            <th class="p-3">Manuel Fiyat Takibi</th>
                            <th class="p-3">Akıllı Takip Sistemi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="p-3">Tarama Hızı</td>
                            <td class="p-3">1 Ürün / 2 Dakika</td>
                            <td class="p-3 text-success fw-bold"><i class="bi bi-check2-circle"></i> 800+ Ürün / Saniyeler İçinde</td>
                        </tr>
                        <tr>
                            <td class="p-3">Veri Doğruluğu</td>
                            <td class="p-3">Yanıltıcı Sonuçlar</td>
                            <td class="p-3 text-success fw-bold"><i class="bi bi-check2-circle"></i> Strict Filtering ile %100 Net</td>
                        </tr>
                        <tr>
                            <td class="p-3">Mağaza Kapsamı</td>
                            <td class="p-3">Sadece Bilindik Siteler</td>
                            <td class="p-3 text-success fw-bold"><i class="bi bi-check2-circle"></i> Tüm Google Shopping Satıcıları</td>
                        </tr>
                        <tr>
                            <td class="p-3">Maliyet Analizi</td>
                            <td class="p-3">Sadece Etiket Fiyatı</td>
                            <td class="p-3 text-success fw-bold"><i class="bi bi-check2-circle"></i> Kargo Dahil Nihai Maliyet</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>


    @* --- Örnek Başarı (Genel Ürün Grupları) --- *@
    <section class="py-5 container text-center">
        <div class="bg-white border rounded-4 shadow-sm p-5">
            <h3 class="fw-bold mb-3">Geniş Ürün Yelpazesi ve Hatasız Veri</h3>
            <p class="text-muted mb-5 mx-auto" style="max-width: 700px;">
                Sistemimiz, profesyonel karbon serilerinden orta segment hobi modellerine kadar tüm ürün gruplarını
                hassasiyetle ayrıştırır. Benzer isimli ancak farklı donanımdaki modelleri otomatik olarak filtreler.
            </p>

        </div>
    </section>
</div>

@code {
    void ScrollToFeatures()
    {
        // Scroll logic...
    }
}

<style>
    .hero-section {
        background: radial-gradient(circle at top right, #f8f9fa, #e9ecef);
    }

    .feature-card {
        transition: transform 0.3s ease, shadow 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }

    .feature-icon i {
        display: inline-block;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 50%;
        box-shadow: inset 0 0 10px rgba(0,0,0,0.05);
    }

    .table-dark {
        --bs-table-bg: #121416;
    }
</style>